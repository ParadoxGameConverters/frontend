<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <gameConfigurationFile>Configuration\GameConfigurations.xml</gameConfigurationFile>
  <supportedConverters>
    <converter>
      <name>Ck2ToEu3</name>
      <friendlyName>From Crusader Kings 2 to Europa Universalis 3</friendlyName>
      <defaultConfigurationFile>Configuration\Ck2ToEu3DefaultConfiguration.xml</defaultConfigurationFile>
      <userConfigurationFile></userConfigurationFile>
      <converterExeName>CK2ToEU3.exe</converterExeName>
      <!--<isDefault>true</isDefault>-->
      <sourceGame>CrusaderKings2</sourceGame>
      <targetGame>EuropaUniversalis3</targetGame>
      <subfolderName>ck2toeu3</subfolderName>
      <isEnabled>false</isEnabled>
    </converter>
    <converter>
      <name>Eu3ToVic2</name>
      <friendlyName>From Europa Universalis 3 to Victoria 2</friendlyName>
      <defaultConfigurationFile>Configuration\Eu3ToVic2DefaultConfiguration.xml</defaultConfigurationFile>
      <userConfigurationFile></userConfigurationFile>
      <converterExeName>EU3toV2Converter.exe</converterExeName>
      <!--<isDefault>true</isDefault>-->
      <sourceGame>EuropaUniversalis3</sourceGame>
      <targetGame>Victoria2</targetGame>
      <subfolderName>eu3tovic2</subfolderName>
      <isEnabled>false</isEnabled>
      <informationText>The frontend is currently unable to automatically install the converter mod. Please see readme.txt, under the heading "THE CONVERTER MOD for VICTORIA 2", for instructions.</informationText>
    </converter>
    <converter>
      <name>Eu4ToVic2</name>
      <friendlyName>From Europa Universalis 4 to Victoria 2</friendlyName>
      <defaultConfigurationFile>Configuration\Eu4ToVic2DefaultConfiguration.xml</defaultConfigurationFile>
      <userConfigurationFile></userConfigurationFile>
      <converterExeName>EU4toV2Converter.exe</converterExeName>
      <!--<isDefault>false</isDefault>-->
      <sourceGame>EuropaUniversalis4</sourceGame>
      <targetGame>Victoria2</targetGame>
      <subfolderName>eu4tovic2</subfolderName>
      <isEnabled>true</isEnabled>
      
      <!--Sometimes the converter needs files from the previous conversion step. Thus these tags are needed-->
      <!--<nativeParadoxExportDirectory>\Paradox Interactive\Crusader Kings II\eu4_export\mod</nativeParadoxExportDirectory>
      <nativeParadoxExportDirectoryLocationType>WindowsUsersFolder</nativeParadoxExportDirectoryLocationType>
      <nativeParadoxExportDirectoryTag>CK2ExportDirectory</nativeParadoxExportDirectoryTag>-->
    </converter>
  </supportedConverters>
</configuration>